<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="Ui">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ui_component_text_size</item>
    </style>

    <style name="Ui.Components" />

    <style name="Ui.Components.Button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/ui_component_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:scrollbars">none</item>
        <item name="minHeight">@dimen/ui_component_button_min_height</item>
    </style>

    <style name="Ui.Components.Button.Small">
        <item name="android:textSize">@dimen/ui_component_text_size_small</item>
        <item name="minHeight">@dimen/ui_component_button_min_height_small</item>
    </style>

    <style name="Ui.Components.Button.Large">
        <item name="android:textSize">@dimen/ui_component_text_size_large</item>
        <item name="minHeight">@dimen/ui_component_button_min_height_large</item>
    </style>

    <style name="Ui.Components.EditText">

    </style>

</resources>
