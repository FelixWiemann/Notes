<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="note_title_style">@style/Ui.Components.TextView.Large.Bold</item>

        <item name="create_task_text_height">@dimen/ui_component_create_task_text_height</item>
        <item name="task_title_style">@style/Ui.Components.TextView.Bold</item>
        <item name="task_message_style">@style/Ui.Components.TextView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Ui">
        <item name="android:textAppearance">@style/Ui.Text</item>
        <item name="enforceMaterialTheme">true</item>
    </style>

    <style name="Ui.Components" />



</resources>
