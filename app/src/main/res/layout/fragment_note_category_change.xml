<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NoteCategoryChangeFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_note_cat_create_name"
        android:hint="@string/ChangeCatFragmentCatTitle"
        android:minWidth="330dp"
        android:maxWidth="330dp"
        android:inputType="textNoSuggestions" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="330dp"
        android:maxWidth="330dp"
        android:id="@+id/fragment_note_cat_create_description"
        android:layout_below="@+id/fragment_note_cat_create_name"
        android:hint="@string/ChangeCatFragmentCatDesc"
        android:inputType="textMultiLine" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fragment_note_cat_save"
        android:maxWidth="330dp"
        android:minWidth="330dp"
        android:text="@string/ChangeFragmentSaveButton"
        android:layout_below="@+id/CatChangeFragLinLayRGBColorPick" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_note_cat_create_description"
        android:layout_alignParentLeft="true"
        android:id="@+id/CatChangeFragLinLayRGBColorPick"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="r: 0x00"
                android:minWidth="60dp"
                android:maxWidth="60dp"
                android:textAlignment="center"
                android:id="@+id/tvR" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sbRed"
                android:max="255"
                android:minWidth="260dp"
                android:maxWidth="260dp"
                android:layout_gravity="end"
                android:indeterminate="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="g: 0x00"
                android:minWidth="60dp"
                android:textAlignment="center"
                android:maxWidth="60dp"
                android:id="@+id/tvG" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sbGreen"
                android:minWidth="260dp"
                android:maxWidth="260dp"
                android:layout_gravity="end"
                android:max="255"
                android:indeterminate="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="b: 0x00"
                android:minWidth="60dp"
                android:textAlignment="center"
                android:maxWidth="60dp"
                android:id="@+id/tvB" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sbBlue"
                android:minWidth="260dp"
                android:maxWidth="260dp"
                android:layout_gravity="end"
                android:max="255"
                android:indeterminate="false" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
