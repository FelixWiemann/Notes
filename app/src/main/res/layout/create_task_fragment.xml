<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/task_title"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:hint="title"
        android:inputType="textShortMessage|textLongMessage|textAutoCorrect|textPhonetic|textCapSentences|textAutoComplete|textPostalAddress" />

    <EditText
        android:id="@+id/task_message"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_below="@+id/task_title"
        android:layout_alignStart="@+id/task_title"
        android:layout_alignEnd="@+id/task_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:inputType="textShortMessage|textLongMessage|textAutoCorrect|textPhonetic|textCapSentences|textAutoComplete|textPostalAddress"
        android:hint="text" />

</RelativeLayout>