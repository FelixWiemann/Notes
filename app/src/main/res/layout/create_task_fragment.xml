<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/hint_task_title"
        android:inputType="textShortMessage|textLongMessage|textAutoCorrect|textPhonetic|textCapSentences|textAutoComplete|textPostalAddress"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/task_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_component_create_task_text_height"
        android:layout_below="@+id/task_title"
        android:layout_alignStart="@+id/task_title"
        android:layout_alignEnd="@+id/task_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="@string/hint_task_message"
        android:importantForAutofill="no"
        android:inputType="textShortMessage|textLongMessage|textAutoCorrect|textMultiLine|textPhonetic|textCapSentences|textAutoComplete|textPostalAddress" />

</RelativeLayout>