<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants">
    <CheckBox
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:id="@+id/cbTaskDone"
        android:checked="false" />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:gravity="center"
        android:id="@+id/tvNoteDateDue"
        android:layout_toStartOf="@+id/ivCategory"
        android:layout_toLeftOf="@+id/ivCategory"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:clickable="false"
        />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:gravity="center"
        android:id="@+id/tvNoteName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cbTaskDone"
        android:layout_toRightOf="@+id/cbTaskDone"
        android:textColor="#000000"
        android:clickable="false"
       />

    <TextView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:gravity="center"
        android:id="@+id/tvNoteOverview"
        android:layout_toStartOf="@+id/tvNoteDateDue"
        android:layout_toLeftOf="@+id/tvNoteDateDue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/ivCategory"
        android:visibility="invisible"
        android:clickable="false"
        />

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="40dp"
        android:gravity="center"
        android:id="@+id/ivPriority"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />



    <ImageView
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:gravity="center"
        android:id="@+id/ivCategoryBorder"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="1dp"
        android:background="@drawable/note_overview_category_image_view_border"/>
    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:gravity="center"
        android:id="@+id/ivCategory"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#ff0000"/>
</RelativeLayout>